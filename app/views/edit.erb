<form method="post" action="/articles/<%= @article.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <input type="text" id="title" name="article[title]" value="<%= @article.title %>">
    <input type="text" id="content" name="article[content]" value="<%= @article.content %>"><br>
    <input type="submit" value="Submit">
</form>